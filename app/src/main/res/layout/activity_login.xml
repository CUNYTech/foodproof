<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cuny.foodproof.Login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
        <!--android:src="@drawable/testpic"-->


        <EditText
            android:id="@+id/etUsername"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/rect_text_edit"
            android:hint="Username"
            android:textColorHint="#696969"
            android:layout_marginBottom="12dp"
            android:layout_above="@+id/etPassword"
            android:layout_alignLeft="@+id/btLogin"
            android:layout_alignStart="@+id/btLogin" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/rect_text_edit"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#696969"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/etUsername"
            android:layout_alignStart="@+id/etUsername" />

        <TextView
            android:id="@+id/tvResults"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="_"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="104dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Or sign up here!"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="#f5f5dc"
            android:layout_marginTop="103dp"
            android:layout_alignTop="@+id/etPassword"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>